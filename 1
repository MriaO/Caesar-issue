#include <stdio.h>
#include <cs50.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

int main(int argc, string argv[])
{
    //check for correct number of strings
    if (argc != 2)
    {
        printf("Usage: ./caesar key\n");
        return 1;
    }
    //check if key is correct number, not a character
    int j = strlen(argv[1]);
    for (int i = 0; i < j; i++)
    {
        if (!isdigit(argv[1][i]))
        {
            printf("Usage: ./caesar key\n");
            return 1;
        }
    }
    //check if key is negative number
    int key = atoi(argv[1]);
    if (key < 0)
    {
        printf("Usage: ./caesar key\n");
        return 1;
    }
    else
    {
        //getting plaintext from user
        string p = get_string("plaintext: ");
        printf("ciphertext: ");
        //convert text by key
        int n = strlen(p);
        for (int z = 0; z < n; z++)
        {
            //convert all upper letters
            if (isupper(p[z]))
            {
                printf("%c", (((p[z] - 65) + key) % 26) + 65);
            }
            //convert all lower letters
            else if (islower(p[z]))
            {
                printf("%c", (((p[z] - 97) + key) % 26) + 97);
            }
            else
            {
                printf("%c", p[z]);
            }
            printf("\n");
            return 0;
        }
    }
}
